#!/usr/bin/env bash

# Copyright 2017, Dawid Kurek, <dawikur@gmail.com>

fileCsv=$(mktemp)

echo "[ Start ]"

echo "Temporary file: ${fileCsv}"

echo "[ Mkdir ]"
  if [ ! -d build ]; then
    mkdir build || exit 1
  fi

echo "[ Building..."; (
  cd build || exit 1
  cmake .. -DCMAKE_BUILD_TYPE=Release -DENABLE_BENCHMARK=ON || exit 1
  cmake --build . || exit 1
) || exit 1; echo "Building done ]"

echo "[ Testing..."
  ./build/test/benchmark/lel_benchmark --outputTable "${fileCsv}"
echo "Testing done ]"

echo "[ Stop ]"

